{
    "compilerOptions": {
        "lib": ["es2022"],
        "esModuleInterop": true,
        "isolatedModules": true,
        "module": "Preserve",
        "moduleDetection": "force",
        "noUncheckedIndexedAccess": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "es2022",
        "verbatimModuleSyntax": true
    },
    "include": ["src/**/*"]
}
